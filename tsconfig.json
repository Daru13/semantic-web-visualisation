{
  "compilerOptions": {
    "module": "es6",
    "target": "ES6",
    "rootDir": "./src/ts",
    "outDir": "./build/modules/",
    "pretty": true,
    "declaration": false,
    "alwaysStrict": true,
    "noImplicitAny": true
  },

  "compileOnSave": false,

  "include": [
    "src/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "demo",
    "build"
  ]
}