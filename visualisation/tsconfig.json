{
  "compilerOptions": {
    "module": "es6",
    "target": "ES6",
    "rootDir": "./src",
    "outDir": "./build",
    "pretty": true,
    "declaration": true,
    "declarationDir": "./build",
    "alwaysStrict": true,
    "noImplicitAny": true
  },

  "compileOnSave": false,

  "include": [
    "src/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "build"
  ]
}